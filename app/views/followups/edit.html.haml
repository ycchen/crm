.list-group-item{ id: :edit_followup }
  = simple_form_for edit_followup_form(@followup, @contact), html: { class: 'form-horizontal' } do |f|
    .row
      .col-xs-12
        = render partial: 'form', locals: { f: f }
    .row
      .col-xs-12
        .pull-right
          = link_to "#{sg('ban-circle')} &nbsp;Cancel".html_safe, cancel_edit_followup_link(@contact), class: 'btn btn-sm btn-warning'
          = f.button :button, class: 'btn btn-sm btn-success' do
            #{sg('saved')} &nbsp;Update Followup
