
%p
.col-md-3
.col-xs-12.col-md-6
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        Login using another account you own
    .panel-body
      = link_to '', omniauth_authorize_path(resource_name, 'google_oauth2'), class: :google
      = link_to '', omniauth_authorize_path(resource_name, 'facebook'), class: :facebook
.col-md-3

.row
.col-md-3
.col-xs-12.col-md-6
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        Login using your email and password
    .panel-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true
          = f.input :password, required: false
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions
          %button.btn.btn-danger{ type: :submit, id: :submit }
            = "#{sg('log-in')} &nbsp;Login".html_safe
.col-md-3

= render 'devise/shared/links'
