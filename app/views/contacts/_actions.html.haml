.btn-group
  %button.btn.btn-sm.btn-primary.dropdown-toggle{ 'aria-expanded' => false, 'aria-haspopup' => true, 'data-toggle' => :dropdown, type: :button }
    = "#{sg('menu-hamburger')} &nbsp;Actions".html_safe
    &nbsp;
    %span.caret
  %ul.dropdown-menu
    %li= link_to "#{sg('pencil')} &nbsp;Update".html_safe, edit_contact_path(contact)
    %li.divider{ role: :separator }
    %li= link_to "#{sg('file')} &nbsp;View Notes (#{contact.notes_count})".html_safe, contact_notes_path(contact)
    %li= link_to "#{sg('plus')} &nbsp;New Note".html_safe, new_contact_note_path(contact)
    %li.divider{ role: :separator }
    %li= link_to "#{sg('time')} &nbsp;Followups (#{contact.incomplete_followups.size})".html_safe, contact_followups_path(contact)
    %li= link_to "#{sg('plus')} &nbsp;New Followup".html_safe, new_contact_followup_path(contact)
    %li.divider{ role: :separator }
    %li= link_to "#{sg('usd')} &nbsp;Sales (#{contact.sales.size})".html_safe, contact_sales_path(contact)
    %li= link_to "#{sg('plus')} &nbsp;New Sale".html_safe, sales_path('sale[contact_id]' => contact.id), method: :post
